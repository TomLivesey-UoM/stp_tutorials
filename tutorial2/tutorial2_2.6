def GC_counter(seq):
    
    base_counts = {'A': 0,
                   'T': 0,
                   'G': 0,
                   'C': 0}
    
    seq = seq.upper()
    
    for c in seq:
        for k, v in base_counts.items():
            if c == k:
                base_counts[k] += 1
    
    AT = base_counts['A'] + base_counts['T']
    GC = base_counts['G'] + base_counts['C']

    GC_content = (float(GC)/(float(GC) + float(AT))) * 100

    print("{:.2f}".format(GC_content))

GC_counter('aggagtaagcccttgcaactggaaatacacccattg')